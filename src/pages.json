{
    // 组件自动化引入
    "easycom": {
        "autoscan": true,
        "custom": {
            // uni-ui 规则
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
            // 以 Ps5 开头的组件规则，在components目录下
            "^Ps5(.*)": "@/components/Ps5$1.vue"
        }
    },
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
                "navigationStyle": "custom",
                "navigationBarTextStyle": "white",
				"navigationBarTitleText": "攻略"
			}
		},
        {
            "path": "pages/my/my",
            "style": {
                "navigationBarTitleText": "我的"
            }
        },
        {
            "path": "pages/login/login",
            "style": {
                "navigationBarTitleText": "登录"
            }
        },
        {
            "path": "pages/persona/persona",
            "style": {
                "navigationStyle": "custom",
                "navigationBarTextStyle": "white",
                "navigationBarTitleText": "人格面具"
            }
        }
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#9f2011",
		"backgroundColor": "#F8F8F8"
	},
    "tabBar": {
        "color": "#black",
        "fontSize": "15ddpx",
        "selectedColor": "#ffffff",
        "backgroundColor": "#9f2011",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/icon/icon_index.png",
                "selectedIconPath": "static/icon/icon_index_active.png",
                "text": "攻略"
            },
            {
                "pagePath": "pages/persona/persona",
                "iconPath": "static/icon/icon_persona.png",
                "selectedIconPath": "static/icon/icon_persona_active.png",
                "text": "人格面具"
            },
            {
                "pagePath": "pages/my/my",
                "iconPath": "static/icon/icon_my.png",
                "selectedIconPath": "static/icon/icon_my_active.png",
                "text": "我的"
            },
        ]
    }
}
